<Window x:Class="HearthStoneDT.UI.Views.AddDeckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 덱 등록"
        Width="720"
        Height="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 안내 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="덱 텍스트를 그대로 붙여넣고 저장하세요."
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,6"/>
            <TextBlock Text="예: ### 덱이름 / # 2x (1) 카드명 / 덱 코드"
                       Opacity="0.75"/>
        </StackPanel>

        <!-- 입력 -->
        <TextBox Grid.Row="1"
                 x:Name="RawDeckTextBox"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 FontFamily="Consolas"
                 FontSize="14"/>

        <!-- 버튼/상태: 입력창 아래 -->
        <DockPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText" VerticalAlignment="Center" Opacity="0.8"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="저장" Width="100" Height="34" Margin="0,0,8,0" Click="Save_Click"/>
                <Button Content="취소" Width="100" Height="34" Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
